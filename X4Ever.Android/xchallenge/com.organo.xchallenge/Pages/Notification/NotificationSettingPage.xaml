                        <Label Text="{Binding VersionUpdateText}" HorizontalOptions="StartAndExpand" Style="{DynamicResource labelStyleLink}" />
                        <Switch x:Name="switchVersionUpdate" IsToggled="{Binding IsVersionUpdate, Mode=OneWay}" />
                    </StackLayout>
                </ViewCell>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Padding="20,0,0,0">
                        <Label Text="{Binding GeneralMessageText}" HorizontalOptions="StartAndExpand" Style="{DynamicResource labelStyleLink}" />
                        <Switch x:Name="switchGeneralMessage" IsToggled="{Binding IsGeneralMessage, Mode=OneWay}" />
                    </StackLayout>
                </ViewCell>-->
            </TableSection>
          </TableRoot>
        </TableView>
    </StackLayout>
</notification:NotificationSettingPageXaml>